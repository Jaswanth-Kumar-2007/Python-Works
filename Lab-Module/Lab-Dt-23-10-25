# Q4: Matrix Diagonal Oprators

class Matrix:
    def matrix_input(self):
        self.rows = int(input("Enter No. of Rows: "))
        self.columns = int(input("Enter No. of Columns: "))
        if self.rows == self.columns:
            self.res_row = []
            for i in range(self.rows):
                res_col = []
                for j in range(self.columns):
                    p = int(input(f"Enter the Value [{i}] [{j}]: "))
                    res_col.append(p)
                self.res_row.append(res_col)
            return self.res_row
        else:
            print("Not Applicable")

    def primary_diagonal(self):
        self.primary_diagonal = []
        for i in range(self.rows):
            self.primary_diagonal.append(self.res_row[i][i])
        print(self.primary_diagonal)
    
    def secondary_diagonal(self):
        self.secondary_diagonal = []
        for j in range(self.rows):
            self.secondary_diagonal.append(self.res_row[abs(self.rows-j-1)][j])
        print(self.secondary_diagonal)
    
    def sum_diagonal(self):
        self.sum = 0
        for i in self.primary_diagonal:
            self.sum += i
        for j in self.secondary_diagonal:
            self.sum += j
        print(self.sum)
    
