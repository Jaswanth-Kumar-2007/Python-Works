# Q5: Bank Loan Evaluator

class Customer:
    all_customers = []   # class variable to track all customers
    
    def __init__(self, name, loans):
        self.name = name
        self.loans = loans
        Customer.all_customers.append(self)
        
    def total_loan(self):
        return sum(self.loans)
    
    def high_value_loans(cls, limit):
        for cust in cls.all_customers:
            if cust.total_loan() >= limit:
                print(f"{cust.name} : {cust.total_loan()}")
                
    def display_info(self):
        print(self.name,"--> ",self.total_loan())
            
#c1 = Customer("A",[23,21,17])
#c2 = Customer("B",[11,23,18])

#c2.display_info()
#c2.high_value_loans(54)


        
     
    
    
    
    
    
        
    
            
            
                
                
            
        
